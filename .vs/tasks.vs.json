{
  "version": "0.2.1",
  "tasks": [
    {
      "taskLabel": "build_C++",
      "appliesTo": "*.cpp",
      "type": "build",
      "command": "cl",
      "args": [
        "/EHsc",
        "/Fe:${fileBasename}.exe",
        "${file}"
      ]
    },
    {
      "taskLabel": "run",
      "appliesTo": "*.exe",
      "type": "shell",
      "command": "${file}"
    },
    {
      "taskLabel": "cleanup",
      "appliesTo": "*.exe",
      "type": "shell",
      "command": "del",
      "args": [
        "${file}"
      ]
    }
  ]
}
